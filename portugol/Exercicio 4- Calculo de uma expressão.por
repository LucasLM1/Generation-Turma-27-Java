programa
{
	inclua biblioteca Matematica --> mt
	
	funcao inicio()
	{
		real a, b, c, r, s, d

		escreva("Digite o valor de A: ")
		leia(a)
		escreva("Digite o valor de B: ")
		leia(b)
		escreva("Digite o valor de C: ")
		leia(c)

		r = mt.potencia((a + b), 2)
		s = mt.potencia((b + c), 2)
		d = (r + s)/2

		 escreva("O resultado é igual a :" +d)
		
	}
}
